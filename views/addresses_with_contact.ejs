<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Adresses with contact</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
  <body>
    <marquee direction="right">
      <h1><a href="/">Adresses with contact</a></h1>
    </marquee>

    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Company</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Streets</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.company %></td>
            <td><%= item.telp_number %></td>
            <td><%= item.email %></td>
            <td><%= item.streets.join(', ') %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
